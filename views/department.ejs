<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Department</title>
</head>
<style>
    .card img {
        width: 100%;
        height: 50%;
    }

    .star {
        color: red;
    }
</style>

<body>
    <nav class="navbar navbar-light bg-light d-flex justify-content-end">
        <form action="/dept/getallemp" class="form-inline">
            <button class="btn btn-primary" type="submit">GET All Employees </button>

        </form>
    </nav>

    <div class="container ">
        <h1 class="text-center"> Department Page</h1>

        <% if(typeof err !='undefined' ){ %>
            <div onclick="de()">
                <% err.forEach(i=>{ %>
                    <div class="alert alert-warning alert-dismissible fade show mb-2" id="myalert" role="alert">
                        <strong>alerts </strong>
                        <%- i.msg %>
                            <button type="button" class="btn-close" id="mybtn" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                    <%}); %>
            </div>
            <% } %>




                <div class="col-md-7 m-auto mb-3 shadow">
                    <div class="d-flex justify-content-center align-self-center">

                        <div class="card m-5" style="width: 18rem;">
                            <img class="card-img-top"
                                src="https://cdn.pixabay.com/photo/2017/08/01/16/43/hanger-2566555__340.jpg"
                                alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">Another Department</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the
                                    bulk of
                                    the
                                    card's content.</p>
                                <a href="#addemp" class="btn btn-primary   w-100">Add Employees</a>
                                <a href="/dept/dept1" class="btn btn-primary  mt-2 w-100">Show Employees</a>
                            </div>
                        </div>



                        <div class="card m-5" style="width: 18rem;">
                            <img class="card-img-top"
                                src="https://cdn.pixabay.com/photo/2020/03/10/08/56/fire-department-4918312__340.png"
                                alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">FIre Department</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the
                                    bulk of
                                    the
                                    card's content.</p>
                                <a href="#addemp" class="btn btn-primary   w-100">Add Employees</a>
                                <a href="/dept/dept2" class="btn btn-primary  mt-2 w-100">Show Employees</a>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center align-self-center">



                        <% if(typeof depts !='undefined' ){ %>
                            <div>
                                <% depts.forEach(i=>{ %>

                                    <div class="card m-5" style="width: 25rem;">
                                        <img class="card-img-top"
                                            src="https://cdn.pixabay.com/photo/2017/08/01/16/43/hanger-2566555__340.jpg"
                                            alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%- i.dept_name%>
                                            </h5>
                                            <p class="card-text">
                                                <%- i.dept_desc%>
                                            </p>
                                            <a href="#addemp" class="btn btn-primary   w-100"> Add Department</a>
                                            <a href="/dept/getemp/<%-i.dept_id%>"
                                                class="btn btn-primary  mt-2 w-100">Show or
                                                Add
                                                Employees</a>
                                        </div>
                                    </div>




                                    <%}); %>
                            </div>
                            <% } %>




                    </div>

                    <div class="d-flex align-self-center justify-content-center ">
                        <button type="button" class="btn btn-primary w-75 mb-4 mt-1"> Add Deapartment </button>
                    </div>
                </div>
                <div id="addemp" class="col-md-7 d-flex justify-content-center align-self-center shadow m-auto">


                    <form action="/dept/adddept" method="POST">
                        <div>
                            <h1>Add Department</h1>
                        </div>
                        <div class="form-group p-3">

                            <label>Department Name <span class="star">*</span></label>
                            <input type="text" class="form-control" name="dept_name" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter Department Name " required>

                        </div>
                        <div class="form-group p-3">
                            <label>Department Id <span class="star">*</span></label>
                            <input type="text" name="dept_id" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" value="<%- dept_id%>" readonly>

                        </div>
                        <div class="form-group p-3">
                            <label>Department desc<span class="star">*</span></label>
                            <input type="text" name="dept_desc" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter department desc" required>

                        </div>


                        <div class="form-group p-3">
                            <button type="submit" class="form-control p-2 bg-primary text-white">
                                Add Department
                            </button>
                        </div>

                    </form>


                </div>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
        integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
        integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
        crossorigin="anonymous"></script>

    <script>
        function myfun() {
            const btn = document.querySelector('#change_text')
            btn.innerHTML = "Employee added"
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    console.log("running");
                }
            };
            xhttp.open("POST", "/dept/addemp");
            xhttp.send();
        }
    </script>

</body>

</html>